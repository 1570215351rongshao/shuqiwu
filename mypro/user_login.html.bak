<!docdype html>
<html>
<head>
<title>我的其</title>
<meta charset="utf-8">
</head>
<body>
	<input type="text"name="uname" placeholder="请输入用户名/手机号"><br>
	<input type="password" name="upwd" placeholder="请输入密码">
	<button onclick=login()>登录</button>
		<script>
			function login(){
				/*判断是否为空*/
				if (!uname.value)
				{
					alert("用户名不能为空"):
					return;
				}
				if (!upwd.value)
				{
					alert("密码不能为空");
					return;
				}
				/*xhl四步*/
				var xhl=new XMLHttpRequest();
				xhr.onreadystatechange=function(){
					if (xhr.readyState===4 && xhr.status===200)
					{
						var result=xhr.responseText;
						if (result="1")
						{
							alert("登录成功");
						}else{
							alert("登录失败");
						}
					}
				
				}
				xhr.open("get","/mypro/v1/user_login",true)
				xhr.semd();
			}
		</script>
</body>
</html>